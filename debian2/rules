#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.8.5 at
# Wed, 08 Jun 2016 01:01:00 -0400

%:
	dh $@ --with python2 --buildsystem=python_distutils


override_dh_auto_clean:
	python setup.py clean -a
	find . -name \*.pyc -exec rm {} \;



override_dh_auto_build:
	python setup.py build --force



override_dh_auto_install:
	python setup.py install --force --root=debian/psistats --no-compile -O0 --install-layout=deb --prefix=/usr
	if [ ! -d "debian/psistats/etc" ]; then mkdir -p "debian/psistats/etc"; fi
	cp debian/psistats/usr/etc/psistats.conf debian/psistats/etc/psistats.conf
	rm -rf debian/psistats/usr/etc/



override_dh_python2:
	dh_python2 --no-guessing-versions




